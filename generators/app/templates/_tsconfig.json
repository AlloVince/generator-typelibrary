{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "removeComments": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "src/@types/*",
        "node_modules/*",
      ]
    }
  },
  "exclude": [
    "examples/",
    "node_modules",
    "test"
  ]
}
